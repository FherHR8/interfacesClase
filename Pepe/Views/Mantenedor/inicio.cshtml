@model IEnumerable<Pepe.Models.contacto>
@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Lista de contactos</h4>
    </div>
    <div class="panel-body">
        <a class="btn btn-success" href="@Url.Action("Crear","Mantenedor")">Crear nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Telefono</th>
                    <th style="width:150px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Correo</td>
                    <td>@item.Telefono</td>
                    <td>
                        <a class="btn btn-primaty btn-sm" href="@Url.Action("Editar","Mantenedor", new { idcontacto = item.idContacto})">Editar</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Eliminar","Mantenedor", new { idcontacto = item.idContacto})">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
