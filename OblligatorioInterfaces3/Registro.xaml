<Window x:Class="OblligatorioInterfaces3.Registro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OblligatorioInterfaces3"
        mc:Ignorable="d"
        Title="Registro" Height="450" Width="800">
    <DockPanel>
        <DockPanel.Background>
            <ImageBrush ImageSource="/rojoBlanco.jpg"/>
        </DockPanel.Background>
        <Label DockPanel.Dock="Top" FontWeight="Bold" Content="Registro" HorizontalAlignment="Center" Height="60" FontSize="30">
        </Label>
        <Label DockPanel.Dock="Right" Background="white"  Width="1"></Label>
        <Label DockPanel.Dock="Left" Background="white" Width="50"></Label>
        <Label DockPanel.Dock="Bottom" Background="white" Height="1"></Label>
        <WrapPanel Orientation="horizontal">
            <Label Width="30" Height="30">
                <Label.Background>
                    <ImageBrush ImageSource="/persona.png"/>
                </Label.Background>
            </Label>
            <WrapPanel Orientation="Vertical">
                <TextBox Width="120"></TextBox>
                <Label Content="Nombre y apellidos"></Label>
            </WrapPanel>
        </WrapPanel>
    </DockPanel>
</Window>
